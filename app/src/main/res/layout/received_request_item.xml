<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/received_friend_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:src="@drawable/contact_image"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/received_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Display Name"
        android:layout_toRightOf="@id/received_friend_image"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/received_friend_image" />

    <TextView
        android:id="@+id/received_friend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/received_friend_name"
        android:layout_toRightOf="@id/received_friend_image"
        android:fontFamily="@font/roboto"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_toEndOf="@id/received_friend_image" />

    <ImageButton
        android:id="@+id/received_friend_accept_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/received_friend_reject_request"
        android:src="@drawable/accept_request"
        android:layout_toStartOf="@id/received_friend_reject_request" />

    <ImageButton
        android:id="@+id/received_friend_reject_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/reject_request"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp" />


</android.widget.RelativeLayout>